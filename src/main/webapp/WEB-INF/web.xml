<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         version="3.0">
    
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.exemplo.app.controller.HomeController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
